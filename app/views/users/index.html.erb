<%if current_user%>
<h1>Usuarios</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>E-mail</th>
    <th>Contraseña</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%=h user.password %></td>
    <td><%= link_to 'Ver', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Eliminar', user, :confirm => '¿Está seguro que desea eliminar el usuario?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Registrar Usuario', new_user_path %>
<%else%>
<h2>No puede realizar esta acción, por favor contáctese con el administrador del sistema</h2>
<%end%>