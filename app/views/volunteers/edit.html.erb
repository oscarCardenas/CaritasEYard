<h1>Editar Voluntario</h1>

<% form_for(@volunteer, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <table>

    <tr>
      <td>* Nombre</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>* Apellido Paterno</td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td>* Apellido Materno</td>
      <td><%= f.text_field :second_last_name %></td>
    </tr>
    <tr>
      <td>&nbsp&nbsp&nbspProfesion</td>
      <td><%= f.text_field :profession %></td>
    </tr>
    <tr>
      <td>&nbsp&nbsp&nbspTelefono</td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td>&nbsp&nbsp&nbspCelular</td>
      <td><%= f.text_field :movil %></td>
    </tr>
    <tr>
      <td>* Fecha de Nacimiento</td>
      <td><%= f.date_select :date_of_birth ,  :start_year => 1935%></td>
    </tr>
    <tr>
        <td>* Genero</td>      
        <td>masculino
          <%= f.radio_button(:genre, "masculino") %>         
          femenino
          <%= f.radio_button(:genre, "femenino") %></td>  
      </tr>
    <tr>
      <td>* Cargo</td>
      <td><%= f.text_field :position %></td>
    </tr>
    <tr>
      <td>&nbsp&nbsp&nbspEmail</td>
      <td><%= f.text_field :email %></td>
    </tr>
    
      <tr>
        <td>&nbsp&nbsp&nbspGrupo</td>
        <td>
          <select name="volunteer[group_id]">
            <% @groups.each do |group| %>
              <option value="<%=group.id%>" <%='selected' if group.id == @volunteer.group_id %>>
                <%=group.name%>
              </option>
            <%end%>
          </select>
        </td>
      </tr>
      <tr>  
      <td><%= "Fotografia Del Voluntario" %></td>
      <% if @volunteer.volunteer_photo %>
      <td><%=  image_tag url_for_file_column("volunteer", "volunteer_photo"), :size=>"300x200" %>
      <% else %>
      <td>No Esta Disponible La Imagen
      <% end %>
      <br>
      <%= file_column_field "volunteer", "volunteer_photo"%> </td>
    </tr>
  
    
   <tr align="right">
      <td colspan="2">
        <%= f.submit 'Guardar' %>
        <%= link_to 'Ver', :action => :show %>
        <%= link_to 'Cancelar', volunteers_path %>
      </td>
    </tr>
    
        <tr>
      <td>*  Estos campos son obligatorios</td>
    </tr>
  </table>

<% end %>
