<%if current_user%>
<h1>Editar Taller</h1>

<% form_for(@workshop) do |f| %>
  <%= f.error_messages %>

  <table>  
   <tr>
    <td>
      <b>Parroquia</b>
    </td>    
        <td><%= link_to Parish.find(@workshop.parish_id).parish_name,Parish.find(@workshop.parish_id) %></td>
  </tr>
  <tr>
    <td>
      <b>P치rroco</b>
    </td>


    <td><%=h @pastor.to_s  %></td>

  </tr>
