    </td>


    <td><%=h Parish.find(@workshop.parish_id).current_state%></td>

  </tr>
  <tr>
    <td>
      <b>Vicaria a la que Pertenece</b>
    </td> 
    <td><%=h Vicariou.find(Parish.find(@workshop.parish_id).vicariou_id).name_vicariou%></td>   
  </tr>
  
