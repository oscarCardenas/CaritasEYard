<h1>Nuevo Taller</h1>

<% form_for(@workshop) do |f| %>
  <%= f.error_messages %>
<table>
  <tr>
        <td>* Parroquia </td>
        <td><select name="workshop[parish_id]"> 
<% if @parish  
    @parish.each do |parish| %>
    <option value="<%=parish.id%>">
               <%=parish.parish_name%>
    </option>
      <%end%>
    <%end%>
</select></td>
      </tr>
  
  <tr>
    <td>* Encargado</td>  
     <td><select name="workshop[in_charge]"> 
<% if @volunteer  
    @volunteer.each do |volunteer| %>
    <option value="<%=volunteer.id%>">
               <%=volunteer.name + " " + volunteer.last_name%>
    </option>
      <%end%>
    <%end%>
</select></td>   
  </tr>  
  
  <tr>  
    <td>* Curso</td>        
    <td><select name="workshop[course]"> 
    <% if @course  
      @course.each do |course| %>
      <option value="<%=course.name%>">
        <%=course.name%>
      </option>
      <%end%>
    <%end%>
    </select></td>
  </tr> 
  
  <tr>
    <td>Observaciones</td>
    <td><%= f.text_area :observations , :rows=>6, :cols=>22%></td>
  </tr> 
  <tr align="right">
      <td colspan="2">         
          <%= f.submit 'Crear' %> 
    <button type="reset">Limpiar</button>
    <%= link_to 'Atras', workshops_path %>
      </td>
    </tr>  
  <tr>
      <td>*  Estos campos son obligatorios</td>
    </tr>
</table>   
<% end %>
