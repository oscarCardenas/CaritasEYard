<h1>Talleres de Parroquias</h1>

<p>
      <% form_tag workshops_path, :method => 'get' do %>
      Parroquia: <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
      <% end %>
</p>

<table>
  <tr align="right">
    <td>
      <%=button_to 'Crear Taller', new_workshop_path %>
    </td>
  </tr>
  <tr>
    <td colspan="2">

    <table border="3">
      <tr id = 'head-table'>
        <th>Parroquia</th>
        <th>Encargado</th>
        <th>Curso</th>
        <th>Observacion</th>
        <th colspan="3">Accion</th>
      </tr>
    <% @parish.each do |parish| %>
    <% @workshops.each do |workshop| 
      if parish.id == workshop.parish_id %>
    <tr>
    <td><%=h parish.parish_name%></td>
    <td><%=h workshop.in_charge%></td>
    <td><%=h workshop.course %></td>
    <td><%=h workshop.observations %></td>
    <td><%= link_to 'Editar', edit_workshop_path(workshop) %></td>
    </tr>
    <%end end%>
    <%end%>
    </table>

    </td>
  </tr>
</table>

<br />
