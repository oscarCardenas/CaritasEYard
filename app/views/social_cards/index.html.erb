<%if current_user%>

  <h1>Fichas Sociales</h1>
<p>
  <% form_tag social_cards_path, :method => 'get' do %>
    Nombre <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  <% end %>
</p>
  <table>
    <tr align="right">
      <td>
        <%=button_to 'Crear Ficha Social', new_social_card_path %>
      </td>
    </tr>
    <tr>
      <td colspan="2">

        <table border="3">
          <tr id = 'head-table'>
            <th>Nombre</th>
            <th>Parroquia</th>
            <th colspan="2">Acciones</th>

          </tr>

          <% @social_cards.each do |social_card| %>
            <tr>
              <td><%= link_to social_card.name,social_card %></td>
              <td>
                 <% @parishes.each do |parish| %>
                  <%= parish.parish_name.to_s  if parish.id == social_card.parish_id  %>
                <%end%>
              </td>
              <td><%= link_to 'Editar', edit_social_card_path(social_card) %></td>
              <td><%= link_to 'Eliminar', social_card, :confirm => 'Esta seguro?', :method => :delete %></td>
            </tr>
          <% end %>
        </table>

      </td>
    </tr>
  </table>

  <br />
<%else%>
  <h2>No puede realizar esta acción, por favor contáctese con el administrador del sistema</h2>
<%end%>

