<table>
  <tr align="right">
    <td>
      <% if current_user %>
        <%= button_to 'Registrar Campa&ntilde;a', new_campaing_path %>
      <%end%>
    </td>
  </tr>
  <tr>
    <td>
      <table border="3">
        <tr id = 'head-table'>
          <th>Nombre</th>
          <th>Lugar</th>
          <th>Descripcion</th>
          <th>Fecha de inicio</th>
          <th>Fecha de finalizacion</th>
          <th>Responsable</th>
          <% if current_user %>
            <th colspan="4">Acciones</th>
            <%end%>
        </tr>

        <% @campaings.each do |campaing| %>
          <tr>
            <td><%=link_to campaing.name, campaing %></td>
            <td><%=h campaing.location %></td>
            <td><%=h campaing.description %></td>
            <td><%=h campaing.date_ini %></td>
            <td><%=h campaing.date_end %></td>
            <td><%=h campaing.responsible %></td> 
            <% if current_user %>
              <td><%= link_to 'Editar', edit_campaing_path(campaing) %></td> 
              <td><%= link_to 'Agregar fotos', :controller => "campaings", :action=>"add_photos", :id => campaing %></td>
              <td><%= link_to 'Ver fotos', :controller => "campaings", :action=>"show_photos", :id => campaing %></td>
              <td><%= link_to 'Eliminar fotos', :confirm => "esta por eliminar todas las imagenes de esta campaña, desea continuar??", :controller => "campaings", :action => "destroy_all_photos", :id => campaing  %> </td>
            <%end%>
          </tr>
        <% end %>
          
      </table>
      
    </td>      
  </tr>  
</table>
