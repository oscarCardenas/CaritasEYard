<% form_for(@campaing) do |f| %>
<CENTER><h1>Campa&ntilde;a</h1></center>
<TABLE ALIGN="CENTER">

<TR>
<TD WIDTH=100>
  <p>
  <b>Nombre</b>
 </p>
</TD>

<TD WIDTH=100>
  <p>
  <%=h @campaing.name %>
</p>
</TD>
</TR>

<TR>
<TD WIDTH=100>
  <p>
  <b>Lugar</b>
</p>
</TD>

<TD WIDTH=100>
  <p>
 
  <%=h @campaing.location %>
</p>
</TD>
</TR>

<TR>
<TD WIDTH=100>
  <p>
  <b>Descripción</b>

</p>
</TD>

<TD WIDTH=100>
  <p class="word_wrap">
    <%= f.text_area  :description, :size => "60x20", :style=> "resize:none", :disabled => true %>
</p>
</TD>
</TR>

<TR>
<TD WIDTH=100>
  <p>
  <b>Fecha de Inicio</b>
  
</p>
</TD>

<TD WIDTH=100>
  <p>

  <%=h @campaing.date_ini %>
</p>
</TD>
</TR>


<TR>
<TD WIDTH=100>
  
<p>
  <b>Fecha de Finalización</b>
</p>
</TD>

<TD WIDTH=100>
  
<p>
  <%=h @campaing.date_end %>
</p>
</TD>
</TR>
<TR>
<TD WIDTH=100>
  <p>
  <b>Responsable</b>
  
</p>
</TD>

<TD WIDTH=100>
  <p class="word_wrap">
  <%=h @campaing.responsible %>
</p>
</TD>
</TR>

  <tr align="right">
    <td colspan="2">
      <% if current_user %>
            <%= link_to 'Editar', edit_campaing_path %>|

      <%= link_to 'Volver', campaings_path %>
          <% else %>
      <%=link_to "Volver", :controller => "campaings", :action => "index_public",:id =>'find'%>
          <% end %>
    </td>

  </tr>
</TABLE>
<% end %>

