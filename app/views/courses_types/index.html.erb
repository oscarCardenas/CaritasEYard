<%if current_user%>
<h1>Cursos de Formacion</h1>

<p>
  <% form_tag courses_types_path, :method => 'get' do %>
    Nombre: <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  <% end %>
</p>

<table>
  <tr align="right">
    <td>
      <%=button_to 'Crear Curso de Formacion', new_courses_type_url %>
    </td>
  </tr>
  <tr>
    <td colspan="2">

      <table border="3">
        <tr id = 'head-table'>
          <th>Nombre</th>
          <th width="250">Descripcion</th>
          <!--<th>Voluntarios</th>-->
          <th colspan="3">Acciones</th>
        </tr>

        <% @courses_types.each do |courses_type| 
            if courses_type.id != 0 %>
            <tr>
              <td><%= link_to courses_type.name, courses_type %></td>
              <td width="250"><%=h courses_type.description %></td>
                           
              <td><%= link_to 'Editar', edit_courses_type_url(courses_type) %></td>
              <td><%= link_to 'Eliminar', courses_type, :confirm => 'Esta seguro que desea eliminar el curso de formacion?', :method => :delete %></td>
            </tr>
          <% end 
        end %>
      </table>

    </td>
  </tr>
</table>
<%else%>
  <h1>no puede realizar esta accion, porfavor contactese</h1>
<%end%>