<%if current_user%>
<h1>Crear Donacion</h1>

<% form_for(@donation) do |f| %>
  <%= f.error_messages %>
<table>

    <tr>     
      <td>* Nombre</td>
      <td><%= f.text_field :name %></td>
    </tr>

  <tr>
      <td>* Cantidad</td>
      <td><%= f.text_field :amount %></td>
      <td>Unidad</td>
      <td><%= f.select  :unit, Donation::DONATION_UNITS %></td>
  </tr>
<tr align="right">
    <td colspan="2">
      <%= f.submit 'Registrar' %>
      <button type="reset">Limpiar</button>
      <%= link_to 'Cancelar', campaings_path %>
    </td>
  </tr>

  <tr>
    <td>*  Estos campos son obligatorios</td>
  </tr>
  </table>


<% end %>
<%else%>
  <h1>no puede realizar esta accion, porfavor contactese</h1>
<%end%>