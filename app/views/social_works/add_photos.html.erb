<CENTER><h1>Campa&ntilde;a</h1></center>
<% form_for(@social_work, :html => {:multipart => true}) do |f| %>
<TABLE ALIGN="CENTER">

<TR>
<TD WIDTH=100>
<center>
  <p>
  <b>Nombre: </b>
  <%=h @social_work.name %>
 </p>
</center>
</TD>
</TR>

<tr>
  <td>
    <% @social_work.social_work_photos.each do |photo| %>
    <%= image_tag photo.data.url, :size => "320x240" %>
    <% end %>
  </td>
</tr>

<tr>
  <td>
  <%= add_social_work_photo(f) %>
  </td>
</tr>

<tr align="right">
      <td colspan="2">
        <%= f.submit 'Actualizar' %>
        <%= link_to 'Volver', social_works_path %>
      </td>
    </tr>
</TABLE>

<% end %>


